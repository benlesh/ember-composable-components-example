{{#if hasRendered}}
	<thead>
		<tr>
			{{#each column in columns}}
				<th {{action 'sortBy' column}}>
					{{view Ember.View controller=parentController template=column.header.template}}
					{{#if column.isSorted}}
					  (sorted)
					{{/if}}
				</th>
			{{/each}}
		</tr>
	</thead>

	<tbody>
		{{#each row in sortedRows}}
			<tr>
				{{#each column in columns}}
					{{view Ember.View tagName="td" controller=parentController template=column.cell.template}}				
				{{/each}}
			</tr>
		{{/each}}
	</tbody>
{{/if}}

{{yield}}