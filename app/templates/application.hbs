<h2 id='title'>Welcome to Ember.js</h2>

{{#my-table rows=myData}}
  {{#my-column sortField="id"}}
    {{#my-column-header}}
      Id
    {{/my-column-header}}
    {{#my-column-cell}}
			{{row.id}}
    {{/my-column-cell}}
  {{/my-column}}

  {{#my-column sortField="name"}}
    {{#my-column-header}}
      Name
    {{/my-column-header}}
    {{#my-column-cell}}
			{{row.name}}
    {{/my-column-cell}}
  {{/my-column}}

  {{#my-column sortField="number"}}
    {{#my-column-header}}
      Number
    {{/my-column-header}}
    {{#my-column-cell}}
			<a href="#" {{action 'incrementNumber' row}}>{{row.number}}</a>
    {{/my-column-cell}}
  {{/my-column}}
{{/my-table}}
